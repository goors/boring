<!DOCTYPE html>
<html ng-app >
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset={{ _charset }}"/>
        <meta name="robots" content="noindex,nofollow" />
        <title>{% block title %}{% endblock %}</title>
        <link href="{{ asset('bundles/framework/css/structure.css') }}" rel="stylesheet" type="text/css" media="all" />
        <link href="{{ asset('bundles/framework/css/body.css') }}" rel="stylesheet" type="text/css" media="all" />
        <link href="{{ asset('bundles/system/css/system.css') }}" rel="stylesheet" type="text/css" media="all" />
        {% block javascripts %} 
        <script src="{{ asset('bundles/system/js/angular.js') }}" type="text/javascript"></script> 
        <script src="{{ asset('bundles/system/js/system.js') }}" type="text/javascript"></script> 
        <script>
            
        </script>
  {% endblock %} 
        {% block head %}{% endblock %}
        <style>
                
        </style>
    </head>
    <body>
        <div id="content">
            <div class="header">
                <div class="holder">
                    <div class="logo">
                        {% if app.user %}
                            <div class="circle">    
                            <a href="/home">Home</a>  
                            </div>
                            <div class="circle">    
                            <a href="/sendgift">Send gift</a>  
                            </div>
                        {% endif %}
                        <span onclick="javascript: window.location.href = '/';" style="cursor: pointer;">Gift app</span>
                        
                        
                    </div>
                    <div class="menu">
                        {% if app.user %}
                        <div class="circle">    
                        <a href="/logout">Logout</a>  
                        </div>
                        {% else %}
                        <a href="/register">Register</a> / 
                        <a href="/login">Login</a>
                        {% endif %}
                    </div>
                </div>
            </div>
            
            <div class="body_holder">
                {% block body %}{% endblock %}
            </div>
            
            <div class="fotter">
                <div class="holder">
                    Copyright 2013, Gift app
                </div>
            </div>  
            <div style="clear: both;"></div>      
        </div>
    </body>
</html>
