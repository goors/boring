        {% block head %}{% endblock %}
        <style>
                body{
                    margin: 0px;
                }
                a{
                    font-size: 14px;
                    text-decoration: none;
                }
                .menu{
                    color: #ccc;
                }
                .menu a{
                    color: #fafafa;
                }
                .menu a:hover{
                    text-decoration: underline;
                }
                .holder{
                    width: 802px; padding-top: 40px; margin: 0 auto;
                }
                .input_block, .sort{
                    padding: 5px !important;
                    margin: 0px !important;
                    background-color: #eee !important;
                    text-align: center;
                    min-width: 100%;
                    min-height: 30px;
                    -webkit-border-radius: 10px !important;
                    border-radius: 10px !important;
                    margin-bottom: 8px !important;
                    margin-top: 4px !important;
                }
                .button{
                    color: white;
                    background-color: #555 !important;
                    font-size: 14px;
                    cursor: pointer;
                }
                .checkbox{
                 margin-right: 10px !important;
                 float: left;
                 display: block;
                }
                .circle{
                    border-radius:50%;
                    -moz-border-radius:50%;
                    -webkit-border-radius:50%;
                    -khtml-border-radius: 50%;
                    background-color: #999;
                    vertical-align: middle;
                    text-align: center;
                    

                }
                .menu .circle, .logo .circle{
                    color: #ebebeb;
                    width: 80px;
                    height: 80px;
                    font-size: 13px;
                    line-height: 80px;
                    margin-top: -30px;
                }
                .latest_gifts .circle{
                    width: 180px;
                    height: 180px;
                    font-size: 13px;
                    line-height: 265px;
                    margin-bottom: 20px;
                    margin-top: 20px;
                    float: left;
                    margin-right: 20px;
                    font-weight: bold;
                }
                .all_users_circle .circle{
                    width: 113px;
                    height: 113px;
                    font-size: 13px;
                    line-height: 113px;
                    margin-bottom: 20px;
                    margin-top: 20px;
                    float: left;
                    margin-right: 20px;
                    font-weight: bold;
                    cursor: pointer;
                }
                .all_gifts_circle .circle{
                    width: 180px;
                    height: 180px;
                    font-size: 13px;
                    line-height: 265px;
                    margin-bottom: 20px;
                    margin-top: 20px;
                    float: left;
                    margin-right: 20px;
                    font-weight: bold;
                    cursor: pointer;
                }
                .logo a{
                    color: #fff;
                    
                }
                .logo a:hover{
                    text-decoration: underline;
                    
                }
                .sort{
                    background-color: #ddd !important;
                    color: #545454 !important; 
                    
                }
                .sort:hover{
                       background-color: #545454 !important;
                    color: #ddd !important;
                    text-decoration: none !important;
                }
                .slider_titles{
                    margin: 0 auto !important;
                    width: 600px;
                    padding: 10px !important;
                    
                    height: auto;
                }
                .slider_titles li{
                     float: left;
                     margin-right: 10px;
                     color: #9e9e9e;
                     font-size: 13px;
                }
                .slider_titles li.active{
                    color: #000;
                    font-weight: bold;
                }
        </style>
    </head>
    <body>
        <div id="content" style="width: 100%;  padding: 0px; margin: 0px;">
            <div class="header" style="background-color: #bbb; height: 100px; padding: 0px;">
                <div class="holder" style="">
                    <div class="logo" style="color: #fff; font-size: 22px; float: left;">
                        {% if app.user %}
                        <div class="circle" style="float: left; margin-right: 280px;">    
                        <a href="/sendgift">Send gift</a>  
                        </div>
                        {% endif %}
                        <span onclick="javascript: window.location.href = '/';" style="cursor: pointer; float: left; display: block;">Gift app</span>
                        
                        
                    </div>
                    <div class="menu" style="float: right;">
                        {% if app.user %}
                        <div class="circle">    
                        <a href="/logout">Logout</a>  
                        </div>
                        {% else %}
                        <a href="/register">Register</a> / 
                        <a href="/login">Login</a>
                        {% endif %}
                    </div>
                </div>
            </div>
            
            <div style="width: 802px; margin: 0 auto;">
                {% block body %}{% endblock %}
            </div>
            <div style="clear: both;"></div>
            <div class="fotter " style="color: #666; width: 100%; border-top: 1px solid #ddd; margin-bottom: 20px;">
                <div class="holder">
                    Copyright 2013, Gift app
                </div>
            </div>  
                  
        </div>
    </body>
</html>
