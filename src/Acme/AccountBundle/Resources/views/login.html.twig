{% extends "TwigBundle::layout.html.twig" %}


{% block head %}
    <link rel="icon" sizes="16x16" href="{{ asset('favicon.png') }}" />
    {% block javascripts %} 
    {{ parent() }}
     <script src="{{ asset('bundles/system/js/angular.js') }}" type="text/javascript"></script> 
     <script src="{{ asset('bundles/system/js/angular-strap.min.js') }}" type="text/javascript"></script> 
     
  {% endblock %} 
{% endblock %}



{% block title 'Register' %}

{% block body %}
    

    <div class="sf-reset holder">
        <div class="block" style="width: 300px; background-color: #ddd; border: none;">

            
            
            
            <form action="{{ path('login_check') }}" method="post">
    <label for="username">User:</label>
    <input id="username" type="text" name="_username" class="block input_block" />
    <label for="password">Password:</label>
    <input id="password" type="password" name="_password" class="block input_block" /> <input type="submit" name="login" class="block input_block button" />
</form>
            {% if error  %} 
     
                <p style="font-weight: bold; text-align: center; font-size: 11px; margin-top: 10px;">{{error.message}}</p>
            {% endif %}
                
                
        </div>
    </div>
    
{% endblock %}
